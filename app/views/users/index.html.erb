<h1>User info</h1>
  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <p>name:<%= @user.name %></p>
    <p>introduction:<%= @user.introduction %>	</p>
  </div>
  <% if @user == current_user %>
    <%= link_to "user edit", edit_user_path(@user.id) %>
  <% end %>

<h1>New Book</h1>
<%= form_with model: @book, url:'/books' do |f| %>
  <p>Titel</p>
    <%= f.text_field :title %>
  <p>Body</p>
    <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<% @users.each do |user| %>
  <div>
    <%= image_tag user.get_profile_image(100,100) %>
    <p><%= user.name %></p>
  </div>
  <%= link_to "Show", user_path(user.id) %>
<% end %>