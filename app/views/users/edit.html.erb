<div class= "container px-5 px-sm-0 mt-3" >
<% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
<ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>
</div>

<div class="col-lg-5 mx-auto">
<h2>User info</h2>
<%= form_with model: @user do |f| %>
<label for="inputName">Name</label><br>
<%= f.text_field :name, autofocus: true, size: "30", id:"inputName", placeholder:"名前"%><br>
<br>
<label for="inputImage">Image</label><br>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
<br>
<label for="inputIntroduction">Introduction</label><br>
<%= f.text_field :introduction, autofocus: true, size: "60", id:"inputIntroduction", placeholder:"introduction" %><br>
<br>
<%= f.submit "Update User" %>
<% end %>
</div>