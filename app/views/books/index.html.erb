<h1>User info</h1>
  <div>
    <%= image_tag @book.user.get_profile_image(100,100) %>
    <p>name:<%= @book.user.name %></p>
    <p>introduction:<%= @book.user.introduction %>	</p>
  </div>
  <% if @user == current_user %>
    <%= link_to "user edit", edit_user_path %>
  <% end %>
  
  <h1>New Book</h1>
<%= form_with model: @book, url:'/books' do |f| %>
  <p>Titel</p>
    <%= f.text_field :title %>
  <p>Body</p>
    <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
  <% @books.each do |book| %>
    <div>
      <%= image_tag book.user.get_profile_image(100,100) %>
      <p><%= link_to book.title, book_path(book.id) %></p>
      <p><%= book.body %></p>
    </div>
  <% end %>