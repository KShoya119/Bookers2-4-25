<div class= "container px-5 px-sm-0 mt-3" >
<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
<ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>
</div>


<div class="d-flex container px-5 px-sm-0">
<%= render 'side', bookd: @book.user, user: @user, books: @book %>

<div class="container col-md-8 offset-md-1">
<div class="row">
<h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <td></td>
      <td>Title</td>
      <td>Opinion</td>
    </tr>
  </thead>
  
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <%= link_to book_path(book.id) do %>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <% end %>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </table>
</div>
</div>
</div>