
<div class="pr-5">
<h1>User info</h1>
  <div>
    <%= image_tag bookd.get_profile_image(100,100) %>
    <p class="border-top">name:<%= bookd.name %></p>
    <p class="border-top">introduction:<%= bookd.introduction %>	</p>
  </div>
  
  <button style="button", class="btn-block"><%= link_to "user edit", edit_user_path(current_user.id) %></button>
  
  <div class="mt-5">
  <h1>New Book</h1>
    <%= form_with model: books, url:'/books' do |f| %>
  <p>Titel</p>
    <%= f.text_field :title %>
  <p>Body</p>
    <%= f.text_field :body %>
  
  <div class="pt-3">
    <button style="background-color: limegreen ", class="text-white"><%= 'Create Book' %></button>
  </div>
<% end %>
</div>
</div>