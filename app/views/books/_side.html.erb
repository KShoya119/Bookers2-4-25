<h1>User info</h1>
  <div>
    <%= image_tag bookd.get_profile_image(100,100) %>
    <p class="border-top">name:<%= bookd.name %></p>
    <p class="border-top">introduction:<%= bookd.introduction %>	</p>
  </div>
  
  <div class="col">
  <%= link_to edit_user_path(user) do %>
    <button style="button", class="btn-block"><i class="fas fa-user-cog"></i></i></button>
  <% end %>
  </div>
  
  <h2 class="mt-3">New book</h2>
    <%= form_with model: books, url:'/books' do |f| %>
  <p>Titel</p>
    <%= f.text_field :title %>
  <p>Body</p>
    <%= f.text_field :body %>
  
  <div class="col pt-3">
    <button style="background-color: limegreen ", class="text-white"><%= 'Create Book' %></button>
<% end %>
</div>